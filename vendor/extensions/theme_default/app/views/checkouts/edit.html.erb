<% params[:step] ||= 'registration' %>
<%- content_for :head do -%>
  <%#= javascript_include_tag  'checkout', '/states' %>
  <%= javascript_include_tag 'checkout.js'%>
<%- end -%>
<div id="checkout">
  <h1><%= t("checkout")%></h1>
  <% form_for @checkout, :url => object_url, :html => { :method => :put, :id => 'checkout_form'} do |checkout_form| %>
    <%= render params[:step], :checkout_form => checkout_form %>    
    <input id="post-final" type="submit" style="display:none"/>
  <% end %>
</div>