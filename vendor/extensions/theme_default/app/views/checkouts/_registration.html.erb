<div id='registration'>
  <h2><%= t("registration")%></h2>
  <div class="inner">
    <p>
      <%= label :user_session, :login, t("your_email") %>
      <%= text_field_tag 'user_session[login]', current_user.blank? ? '' : current_user.email, :class => 'title required' %><span class="req">*</span>
    </p>
    <h5>Already have an account? <%=  link_to t('login'), login_path, :id => 'registration-login-link' %></h5>
    <div class="form-buttons">
      <%= submit_tag(t('checkout_as_guest'), :name => 'guest_checkout', :class => 'continue button primary')%>
    </div>
    <h3>Optional: Set up an account to save time next time</h3>
    <p>
      <%= label :user_session, :password, t("password") %>
      <%= password_field :user_session, 'password', :class => 'title required' %>
    </p>
    <p>
      <%= label :user_session, :password_confirmation, t("confirm_password") %>
      <%= password_field :user_session, 'password_confirmation', :class => 'title required' %>
    </p>
    <div class="form-buttons">
      <%= submit_tag(t('create_account_and_continue'), :name => 'create_account', :class => 'continue button primary')%>
    </div>
  </div>
</div>